<h2>Role: <%= @role.name %></h2>
<h3>Accounts:</h3>
<ul>
  <% @role.users.each do |user| %>
    <li><%= user.user_key %>
      <% if can? :remove_user, Role %>
        <%= button_to "Remove User", role_management.role_user_path(@role, user), :method=>:delete %>
      <% end %>
    </li>
  <% end %>
</ul>
<h3>Add a new account:</h3>
<%= form_tag role_management.role_users_path(@role) do %>
  <%= label_tag 'user_key', 'User' %>
  <%= text_field_tag 'user_key' %>
  <%= submit_tag "Add" %>
<% end %>
